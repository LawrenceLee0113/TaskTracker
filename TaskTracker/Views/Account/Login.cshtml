@model TaskTracker.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "登入";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-[calc(100vh-128px)] flex items-center justify-center bg-gradient-to-br">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="mx-auto h-12 w-12 bg-indigo-600 rounded-xl flex items-center justify-center">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                TaskTracker 登入
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                請輸入您的帳號資訊
            </p>
        </div>

        <!-- 錯誤訊息顯示 -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">登入失敗</h3>
                        <div class="mt-2 text-sm text-red-700">
                            <asp-validation-summary class="list-disc pl-5 space-y-1" />
                        </div>
                    </div>
                </div>
            </div>
        }

        <form class="mt-8 space-y-6" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            
            <div class="rounded-md shadow-sm -space-y-px">
                <div class="mb-4">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">電子郵件</label>
                    <input asp-for="Email" type="email" 
                           class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                           placeholder="請輸入電子郵件">
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">密碼</label>
                    <input asp-for="Password" type="password" 
                           class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                           placeholder="請輸入密碼">
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox" 
                           class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                    <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">
                        記住我
                    </label>
                </div>
            </div>

            <div>
                <button type="submit" 
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                        </svg>
                    </span>
                    登入
                </button>
            </div>

            <!-- 測試帳號資訊 -->
            <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                <h4 class="text-sm font-semibold text-blue-800 mb-2">測試帳號</h4>
                <div class="text-xs text-blue-700 space-y-1">
                    <p><strong>一般使用者：</strong></p>
                    <p>• ming.zhang@example.com (張小明)</p>
                    <p>• hua.li@example.com (李小華)</p>
                    <p>• mei.wang@example.com (王小美)</p>
                    <p><strong>系統管理員：</strong></p>
                    <p>• admin@example.com (系統管理員)</p>
                    <p class="mt-2"><strong>所有密碼：</strong> password123</p>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 